name: Update README

on:
  schedule:
    - cron: '0 0 * * *'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Build and run Docker container
        uses: docker/build-push-action@v2
        with:
          context: .
          push: false
          tags: latest
          load: true
      - name: Run Python script
        run: |
          docker run \
            -v $(pwd):/ \
            latest
